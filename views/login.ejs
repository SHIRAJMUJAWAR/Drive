<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css" rel="stylesheet" />
    <title>Shiraj's Drive - Login</title>
  </head>
  <body class="bg-gray-800 dark:bg-gray-900 h-screen w-screen flex items-center justify-center text-black dark:text-white">

    <form class="w-full max-w-md bg-gray-900 dark:bg-gray-800 text-white p-8 rounded-2xl shadow-[0_0_25px_rgba(134,239,172,0.4)] hover:shadow-[0_0_40px_6px_rgba(134,239,172,0.6)] transition-all duration-300 flex flex-col gap-6"
          action="/" method="post">
      
      <h1 class="text-3xl font-bold text-center mb-6">Login</h1>

      <!-- Username -->
      <div>
        <label for="username" class="block mb-2 text-lg font-medium">Username</label>
        <input type="text" id="username" name="username" required
               placeholder="shiraj mujawar"
               class="w-full px-4 py-2.5 text-sm rounded-2xl bg-gray-800 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 placeholder-gray-400 transition-all duration-200" />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block mb-2 text-lg font-medium">Password</label>
        <input type="password" id="password" name="password" required
               placeholder="••••••••"
               class="w-full px-4 py-2.5 text-sm rounded-2xl bg-gray-800 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 placeholder-gray-400 transition-all duration-200" />
      </div>

      <!-- Submit Button -->
      <button type="submit"
              class="w-full py-2.5 bg-green-500 hover:bg-green-600 text-black font-bold rounded-2xl shadow-md hover:shadow-lg transition-all duration-300">
        Submit
      </button>

      <!-- Register Link -->
      <p class="text-center text-sm mt-2">
        <a href="/register" class="text-green-400 hover:text-green-500 underline">Create an account</a>
      </p>

    </form>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"></script>
  </body>
</html>
