<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Something Went Wrong</title>

  <style>
    * { box-sizing: border-box; }

    body {
      font-family: Inter, system-ui, sans-serif;
      background: radial-gradient(circle at top, #020617, #000);
      color: #e5e7eb;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .card {
      position: relative;
      width: 420px;
      padding: 28px;
      border-radius: 20px;
      background: rgba(255,255,255,0.04);
      backdrop-filter: blur(16px);
      border: 1px solid rgba(255,255,255,0.1);
      box-shadow:
        0 0 60px rgba(239,68,68,0.25),
        inset 0 0 0 1px rgba(255,255,255,0.05);
      animation: fadeIn 0.4s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }

    .glow {
      position: absolute;
      inset: -40px;
      background: radial-gradient(circle, rgba(239,68,68,0.35), transparent 60%);
      filter: blur(40px);
      z-index: -1;
    }

    h1 {
      margin: 0 0 12px;
      font-size: 22px;
      font-weight: 800;
      color: #f87171;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .message {
      background: rgba(255,255,255,0.05);
      padding: 12px 14px;
      border-radius: 12px;
      font-size: 14px;
      margin-bottom: 18px;
      border-left: 4px solid #ef4444;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(255,255,255,0.04);
      padding: 10px 14px;
      border-radius: 10px;
      margin-bottom: 10px;
      font-size: 14px;
      border: 1px solid rgba(255,255,255,0.08);
    }

    .field {
      font-weight: 700;
      color: #93c5fd;
      text-transform: capitalize;
    }

    .error-msg {
      color: #fca5a5;
      font-size: 13px;
    }

    button {
      width: 100%;
      margin-top: 20px;
      padding: 12px;
      font-size: 15px;
      font-weight: 700;
      border-radius: 14px;
      border: none;
      cursor: pointer;
      color: white;
      background: linear-gradient(to right, #ef4444, #dc2626);
      box-shadow: 0 0 25px rgba(239,68,68,0.6);
      transition: all 0.25s ease;
    }

    button:hover {
      transform: translateY(-1px);
      box-shadow: 0 0 40px rgba(239,68,68,0.9);
    }
  </style>
</head>

<body>

  <div class="card">
    <div class="glow"></div>

    <h1>⚠️ Something went wrong</h1>

    <div class="message" id="mainMessage"></div>

    <ul id="errorList"></ul>

    <button onclick="goBack()">← Go Back</button>
  </div>

  <script>
    // Simulated API response
    const apiResponse = {
      errors: [
        { path: "password", msg: "Invalid value" },
        { path: "username", msg: "Invalid value" }
      ],
      message: "Invalid data or this is not a valid user"
    };

    document.getElementById("mainMessage").innerText = apiResponse.message;

    const errorList = document.getElementById("errorList");

    apiResponse.errors.forEach(err => {
      const li = document.createElement("li");
      li.innerHTML = `
        <span class="field">${err.path}</span>
        <span class="error-msg">${err.msg}</span>
      `;
      errorList.appendChild(li);
    });

    function goBack() {
      window.history.back();
    }
  </script>

</body>
</html>
